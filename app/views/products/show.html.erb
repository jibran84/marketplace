<p id="notice"><%= notice %></p>


<div class="row">


  <div class="col-md-2">
      <div class="card">

        <p>
        <%= image_tag @product.image_url, class: 'card-img-top'%> 
        </p>

      </div>

    </div>


    <div class="col-md-8">
        <div class="card">

          <p>
            <strong>Name:</strong>
            <%= @product.name %>
          </p>

          <p>
            <strong>Description:</strong>
            <%= @product.description %>
          </p>

          <p>
            <strong>Price:</strong>
            <%= @product.price %>
          </p>

          <p>
            <strong>Num in stock:</strong>
            <%= @product.num_in_stock %>
          </p>

          <%= link_to 'Edit', edit_product_path(@product) %> |
          <%= link_to 'Back', products_path %>

      </div>
    </div>

</div>
